Page{
  height: 100%;
}
/* 设置页面的圆角 */
.top_wrap{
  height: 80rpx;
  background-color: #62D681;
}
.top_inner{
  height: 80rpx;
  background-color: white;
  border-radius: 0 30px 0 0;
}


/* menu图标 */
.menu{
  position: absolute;
  height: 50rpx;
  width: 60rpx;
  padding: 26rpx;
  z-index: 500;
}


/* 设备文字 */
.equipment{
  display: flex;
  justify-content: center;
  padding-top: 10px;
}


/* 三角 */
.triangle{
  height: 0;
  width: 0;
  border-style: solid;
  border-width: 36rpx;
  border-color: transparent transparent #4B4B4B transparent;
  border-top:none;
  margin-left: -80rpx;
}


/* 设备下拉列表 */
.list{
  text-align: center;
  line-height: 90rpx;
  position: absolute;
  top: 20rpx;
  left: 10rpx;
  z-index: 400;
}


/* 列表的子view */
.list view{
  height: 90rpx;
  width: 200rpx;
  background-color: #4B4B4B;
  color:white;
  border-bottom: 1px solid #888;
}


/* 第二个子view的 */
.list>view:nth-child(2){
  border-radius: 10rpx 10rpx 0 0;
}


/* 最后一个子view */
.list>view:nth-child(6){
  border-radius: 0 0 10rpx 10rpx ;
}


/* 牛喝水的数据 */
.wrap{
  height: 100rpx;
  margin-top: 120rpx;
  width: 100%;
}
.middle{
  float: left;
  width: 2%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: dimgray;
}
.left{
  height: 100rpx;
  width: 49%;
  float: left;
  text-align: center;
  line-height: 100rpx;
  font-family:  '黑体';
}
.right{
  height: 100rpx;
  width: 49%;
  float: left;
  text-align: center;
  line-height: 100rpx;
}
.cow_num_img{
  height: 70rpx;
  width: 70rpx;
  margin-top: 14rpx;
}
.right_text{
  margin-top: rpx;
}


/* 按钮的打开关闭状态 */
.index_state{
  font-weight: 900;
  margin-top: 150rpx;
  display: flex;
  font-family: "黑体";
  justify-content: center;
  align-items: center;
}


/* 水井开关按钮 */
.index_button{
  border-radius: 50%;
  height: 400rpx;
  width: 400rpx;
  line-height: 400rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform:translate3d(-50%,-50%,0);
  background: rgb(233, 228, 228);
}


/* 下方的提示信息 */
.warn{
  position: absolute;
  top: 90%;
  width: 100%;
}
.warn_img{
  height: 40rpx;
  width: 40rpx;
}
.warn_text{
  font-size: 28rpx;
}
.second{
  font-weight: bolder;
  font-size: 36rpx;
}