.top_wrap{
  height: 80rpx;
  background-color: #62D681;
}
.top_inner{
  height: 80rpx;
  background-color: white;
  border-radius: 30px 30px 0 0;
}

.index_state{
  font-weight: 900;
  margin-top: 160rpx;
  display: flex;
  font-family: "楷体";
  justify-content: center;
  align-items: center;
}


.index_button{
  border-radius: 50%;
  height: 400rpx;
  width: 400rpx;
  line-height: 400rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform:translate3d(-50%,-50%,0);
  background: rgb(233, 228, 228);
}

.warn{

  position: absolute;
  top: 90%;
  width: 100%;

}



.warn_img{
  height: 40rpx;
  width: 40rpx;
